{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    "config:recommended",
    "packages:linters",
    "packages:test",
    "security:openssf-scorecard",
    ":automergeAll",
    ":semanticCommits"
  ],
  "enabled": true,
  "prConcurrentLimit": 0,
  "prHourlyLimit": 0,
  "pre-commit": {
    "enabled": true
  },
  "packageRules": [
    {
      "matchPaths": ["^packages/", "^esphome/"],
      "enabled": true
    }
  ],
  "ignorePaths": [],
  "semanticCommits": "enabled",
  "dependencyDashboard": true,
  "dependencyDashboardApproval": true,
  "vulnerabilityAlerts": {
    "enabled": true
  },
  "osvVulnerabilityAlerts": true,
  "automerge": true,
  "automergeType": "pr",
  "lockFileMaintenance": {
    "enabled": true,
    "extends": ["schedule:daily"],
    "automerge": true
  }
}
